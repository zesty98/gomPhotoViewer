<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gomdev.gomPhotoViewer.PhotoListActivity$PlaceholderFragment" >

    <GridView
        android:id="@+id/gridview"
        style="@style/PhotoGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/gridview_margin"
        android:layout_marginLeft="@dimen/gridview_margin"
        android:layout_marginRight="@dimen/gridview_margin"
        android:horizontalSpacing="@dimen/gridview_spacing"
        android:verticalSpacing="@dimen/gridview_spacing"
        android:gravity="center"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</LinearLayout>